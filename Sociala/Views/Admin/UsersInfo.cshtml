                <div class="nav-caption fw-600 font-xssss text-grey-500"><span>Dashboard </span></div>
                <ul class="mb-3">
                    <li><a href="/admin" class="nav-content-bttn open-font"><i class="font-xl text-current feather-inbox me-3"></i><span>Reports</span><span class="circle-count bg-warning mt-1">@ViewBag.ReportNum</span></a></li>
                    <li><a href="/admin/UsersInfo" class="nav-content-bttn open-font"><i class="feather-user btn-round-md bg-primary-gradiant me-3"></i><span>Users </span><<span class="circle-count bg-warning mt-1">@Model.Count()</span></a></li>
